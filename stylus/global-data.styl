@import 'styl/*'

.data-cover-overlay
  position fixed
  top 0
  left -2000px
  opacity 0
  width 100%
  height 100%
  z-index 99
  background #0097a7


.wrap-presentation
  position fixed
  top 0
  left -3000px
  width 100%
  height 100%
  z-index 100
  background none
  padding 150px 0 0 0


.global-quick
    background none
    position relative
    opacity 0
    width 100%
    height 250px
    margin 0 0 100px 0
    padding 30px 8px 8px 15px

    div
      margin 0 0 10px 0
    .questions
       font-size 20px
       font-weight 300



.global-popout
    background white
    position relative
    z-index 110
    width 100%
    height 550px
    border-radius(4px)
    overflow hidden
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    .panel-decor
      position absolute
      background decors
      padding 5px 0 0 2px
      left -40px
      top 0
      width 36px
      height 100%
      z-index 150
      border-radius-half()
     .close-data-popout
       color white
       opacity 0
       cursor pointer
       z-index 150
     .q-content
       padding 15px 10px 10px  60px
       opacity 0
       .slide-one
        position absolute
        top -10px
        left 60px
        opacity 1
        display none
        z-index 111
      .slide-two
        position absolute
        top -10px
        left 60px
        opacity 0
        display none
        z-index 111
      .slide-three
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
      .slide-four
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
      .slide-five
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
     .questions
       font-size 30px
       font-weight 300
       cursor pointer
     .go-button
       background decors
       width 100%
       height 50px
       border-radius 5px
       padding 5px
       text-align center
       color white
