@import 'styl/*'

.data-cover-overlay
  position fixed
  top 0
  left -2000px
  opacity 0
  width 100%
  height 100%
  z-index 99
  background #0097a7


.wrap-presentation
  position fixed
  top 0
  left -3000px
  width 100%
  height 100%
  z-index 100
  background none
  padding 150px 0 0 0


.global-quick
    background none
    position relative
    opacity 0
    width 100%
    margin 0 0 100px 0
    padding 0 8px 8px 15px

    .current
      font-size 20px

    div
      margin 0 0 10px 0
    .questions
       font-size 20px
       font-weight 300



.global-popout
    background white url(images/wb2.png) no-repeat
    background-size cover
    background-position center center
    position relative
    z-index 110
    width 100%
    height 550px
    border-radius(4px)
    overflow hidden
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    .assist
      position absolute
      top 110px
      right 60px
      color #bdbdbd
      font-size 18px
      width 30%
      opacity 0;
    .percentage
      font-size 60px
      color #bdbdbd
      font-weight 100
      position absolute
      right 60px
      top 30px
      span
        font-size 14px
        color gray
        font-weight 200

    .controls
     padding 50px 0 0 0
     position absolute
     right 20px
     bottom 20px
     button
       font-size 20px
       font-weight 100
    .panel-decor
      position absolute
      background decors
      padding 5px 0 0 2px
      left -40px
      top 0
      width 36px
      height 100%
      z-index 150
      border-radius-half()
     .close-data-popout
       color white
       opacity 0
       cursor pointer
       z-index 150
     .q-content
       padding 15px 10px 10px  60px
       position relative
       opacity 0
       width 100%
       height 100%
       .slide-one
        position absolute
        top -10px
        left 60px
        opacity 1
        display none
        z-index 111
        width 50%
      .slide-two
        position absolute
        top -10px
        left 60px
        opacity 0
        display none
        z-index 111
        width 50%
      .slide-three
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
        width 50%
      .slide-four
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
      .slide-five
        position absolute
        top 0
        left 60px
        opacity 0
        z-index 111
        display none
        width 50%
     .questions
       font-size 30px
       font-weight 300
       cursor pointer
