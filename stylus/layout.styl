@import 'styl/*'


.dropdown-content
    background-color #fff
    margin 0
    display none
    min-width 100px
    max-height 250px
    overflow-y auto
    opacity 0
    position absolute
    z-index 999
    will-change width, height;


.view-content
  padding 40px 180px 40px 121px
  z-index 6
.content
  padding 40px 40px 40px 121px
  z-index 6
.content-overlays
  padding 0 40px 40px 121px
  z-index 6
.cursors
  cursor pointer
.no-display
  display none
.display-yes
  display block

//buttons

.btn-hold
